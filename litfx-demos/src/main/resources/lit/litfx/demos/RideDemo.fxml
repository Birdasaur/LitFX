<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Slider?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<AnchorPane id="AnchorPane" style="-fx-background-color: #00000000;" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="lit.litfx.demos.controllers.RideDemoController">
   <children>
      <BorderPane style="-fx-background-color: #00000000;" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <bottom>
            <ScrollPane fitToHeight="true" fitToWidth="true" maxHeight="300.0" style="-fx-background-color: #00000000;" BorderPane.alignment="CENTER">
               <content>
                  <VBox spacing="10.0" style="-fx-background-color: #00000000;">
                     <children>
                        <Label text="Animation Delay (ms)" />
                        <Slider fx:id="delaySlider" majorTickUnit="10.0" minorTickCount="10" showTickLabels="true" showTickMarks="true" snapToTicks="true" value="50.0" />
                        <Label layoutX="10.0" layoutY="10.0" text="Node Pattern" />
                        <ChoiceBox fx:id="nodePatternChoiceBox" prefWidth="200.0" />
                        <Button fx:id="traverseNodesButton" mnemonicParsing="false" prefWidth="150.0" text="Traverse nodes" />
                     </children>
                  </VBox>
               </content>
               <padding>
                  <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
               </padding>
            </ScrollPane>
         </bottom>
         <center>
            <Pane fx:id="centerPane" minHeight="400.0" minWidth="400.0" style="-fx-background-color: #000000;" BorderPane.alignment="CENTER" />
         </center>
      </BorderPane>
   </children>
</AnchorPane>
